{
  "manifest_version": 3,
  "name": "firefly cursor",
  "version": "1.0",
  "description": "firefly cursor",
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
